<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registrar</servlet-name>
        <servlet-class>Servlet.Registrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarTarea</servlet-name>
        <servlet-class>Servlet.AgregarTarea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>Servlet.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarTarea</servlet-name>
        <servlet-class>Servlet.EliminarTarea</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pendiente</servlet-name>
        <servlet-class>Servlet.Pendiente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Completada</servlet-name>
        <servlet-class>Servlet.Completada</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registrar</servlet-name>
        <url-pattern>/Registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarTarea</servlet-name>
        <url-pattern>/AgregarTarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarTarea</servlet-name>
        <url-pattern>/EliminarTarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pendiente</servlet-name>
        <url-pattern>/Pendiente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Completada</servlet-name>
        <url-pattern>/Completada</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
